<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cableList" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:spinnerMode="dropdown"/>
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/antennaList" android:layout_centerHorizontal="true" android:layout_below="@+id/cableList"/>
</RelativeLayout>